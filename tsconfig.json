{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    //TODO: Changed to false
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@nivo/core": ["node_modules/@nivo/core"],
      "@nivo/pie": ["node_modules/@nivo/pie/dist/nivo-pie.esm.js"]
    }
  },
    "exclude": [
      "./__mocks__/",
      "./__tests__"
    ]
}